rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /places/{place} {
      allow read: if true;
      allow write: if false;
    }
    match /turnos/{turno} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.email == "admin@tudominio.com");
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.email == "admin@tudominio.com");
      allow update: if false;
    }
  }
}