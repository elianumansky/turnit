rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Colección de lugares
    match /lugares/{lugarId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null &&
                             (request.auth.uid == resource.data.ownerId || request.auth.token.admin == true);
    }

    // Colección de turnos
    match /turnos/{turnoId} {
      allow read: if true;

      // Usuarios normales pueden crear sus propios turnos
      // Admin puede crear cualquier turno
      allow create: if request.auth != null &&
                    (request.resource.data.userId == request.auth.uid ||
                     request.auth.token.admin == true);

      // Usuarios pueden modificar o borrar solo sus propios turnos
      // Admin puede todo
      allow update, delete: if request.auth != null &&
                            (request.auth.uid == resource.data.userId ||
                             request.auth.token.admin == true);
    }
  }
}
